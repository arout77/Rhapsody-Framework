{% extends "layouts/main.twig" %}

{% block content %}
    <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-200 mb-6">Create an Account</h2>

    <form action="{{ base_url }}/register" method="POST" class="max-w-lg space-y-4">
        {{ csrf_field() }}
        <div>
            <label for="name" class="block text-gray-700 dark:text-gray-300 font-bold mb-2">Name</label>
            <input type="text" name="name" value="{{ old.name|e }}" class="input {{ errors.name ? 'input-error' : '' }}">
            {% if errors.name %}<div class="error-message">{{ errors.name|first }}</div>{% endif %}
        </div>
        <div>
            <label for="email" class="block text-gray-700 dark:text-gray-300 font-bold mb-2">Email</label>
            <input type="email" name="email" value="{{ old.email|e }}" class="input {{ errors.email ? 'input-error' : '' }}">
            {% if errors.email %}<div class="error-message">{{ errors.email|first }}</div>{% endif %}
        </div>
        <div>
            <label for="password" class="block text-gray-700 dark:text-gray-300 font-bold mb-2">Password</label>
            <input type="password" name="password" class="input {{ errors.password ? 'input-error' : '' }}">
            {% if errors.password %}<div class="error-message">{{ errors.password|first }}</div>{% endif %}
        </div>
        <div>
            <label for="password_confirmation" class="block text-gray-700 dark:text-gray-300 font-bold mb-2">Confirm Password</label>
            <input type="password" name="password_confirmation" class="input">
        </div>
        <div>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Register</button>
        </div>
    </form>
    
    <style>.input{--tw-ring-color:transparent;box-shadow:0 1px 2px 0 rgb(0 0 0 / 0.05);appearance:none;border-radius:.375rem;border-width:1px;border-color:#D1D5DB;width:100%;padding:.5rem .75rem;line-height:1.5rem}.dark .input{border-color:#4B5563;background-color:#374151;color:#E5E7EB}.input:focus{outline:2px solid transparent;outline-offset:2px;--tw-ring-color:#60A5FA;border-color:#60A5FA}.input-error{border-color:#EF4444}.error-message{color:#EF4444;font-size:.875rem;margin-top:.25rem}</style>
{% endblock %}
