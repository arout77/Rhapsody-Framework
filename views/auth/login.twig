{% extends "layouts/main.twig" %}

{% block content %}
    <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-200 mb-6">Login</h2>

    {% if error %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ error }}</span>
        </div>
    {% endif %}

    <form action="{{ base_url }}/login" method="POST" class="max-w-md">
        <div class="mb-4">
            <label for="email" class="block text-gray-700 dark:text-gray-300 font-bold mb-2">Email</label>
            <input type="email" name="email" required class="input">
        </div>
        <div class="mb-6">
            <label for="password" class="block text-gray-700 dark:text-gray-300 font-bold mb-2">Password</label>
            <input type="password" name="password" required class="input">
        </div>
        <div>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Login</button>
        </div>
    </form>
{% endblock %}
