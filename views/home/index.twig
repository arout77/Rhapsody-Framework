{% extends "layouts/main.twig" %}

{% block full_width_content %}
<style>
    /* Custom styles for the landing page */
    .bg-grid-gray-700\/\\[0\\.3\\] {
        background-image: linear-gradient(to right, #374151 1px, transparent 1px), linear-gradient(to bottom, #374151 1px, transparent 1px);
        background-size: 4rem 4rem;
        opacity: 0.3;
    }
    .marquee-container {
        overflow: hidden;
        position: relative;
        width: 100%;
        padding: 1rem 0;
    }
    .marquee {
        display: inline-block;
        white-space: nowrap;
        animation: marquee 30s linear infinite;
    }
    .marquee > span {
        display: inline-block;
        padding: 0 2rem;
        font-weight: 700;
        font-size: 1.125rem; /* text-lg */
    }
    @keyframes marquee {
        0% { transform: translateX(0%); }
        100% { transform: translateX(-50%); }
    }
</style>

<section class="relative text-white overflow-hidden" style="background-color: rgb(26, 23, 59, 1);">
    <div class="absolute inset-0 bg-grid-gray-700/[0.3] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_-20%,#000_70%,transparent_110%)]"></div>
    <div class="relative container mx-auto px-6 py-24 md:py-32 lg:py-40 text-center">
        <div class="mb-4">
            <span class="inline-block font-semibold px-4 py-1 border-2 border-pink-600 rounded-full">Elegant. Lightweight. Modern.</span>
        </div>
        <h1 class="text-4xl sm:text-5xl md:text-7xl font-extrabold text-white leading-tight tracking-tight mb-10">
            Compose Your Masterpiece.
        </h1>
        <div class="flex flex-col md:flex-row items-center justify-center gap-8 max-w-4xl mx-auto">
            <div class="md:w-1/3 flex justify-center">
                 <img src="{{ base_url }}/public/img/logo3.png" alt="Rhapsody Framework Conductor" class="w-full max-w-[200px] h-auto rounded-full">
            </div>
            <div class="md:w-2/3 text-left">
                <p class="text-lg md:text-xl text-gray-300 mb-8">
                    Rhapsody is a modern PHP framework designed for developers who value simplicity, performance, and a delightful creative process. Build your next masterpiece, from simple APIs to full-featured web applications.
                </p>
                <div class="flex flex-col sm:flex-row justify-center md:justify-start items-center gap-4">
                    <a href="{{ base_url }}/docs/installation" class="w-full sm:w-auto bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-8 rounded-lg border-2 text-lg transition duration-300 transform hover:scale-105 shadow-lg">
                        Get Started
                    </a>
                    <a href="{{ base_url }}/docs" class="w-full sm:w-auto bg-pink-700 hover:bg-gray-600 text-gray-300 font-bold py-3 px-8 rounded-lg text-lg border-2 transition duration-300 transform hover:scale-105">
                        Read the Docs
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="marquee-container bg-pink-700 text-white">
    <div class="marquee">
        <span>Powering the next generation of web applications</span>
        <span class="text-blue-300">◆</span>
        <span>Service Container & DI</span>
        <span class="text-blue-300">◆</span>
        <span>Expressive Routing</span>
        <span class="text-blue-300">◆</span>
        <span>Middleware Pipeline</span>
        <span class="text-blue-300">◆</span>
        <span>The Rhapsody Console</span>
        <span class="text-blue-300">◆</span>
        <span>Database Migrations</span>
         <span class="text-blue-300">◆</span>
        <span>Powering the next generation of web applications</span>
        <span class="text-blue-300">◆</span>
        <span>Service Container & DI</span>
        <span class="text-blue-300">◆</span>
        <span>Expressive Routing</span>
        <span class="text-blue-300">◆</span>
        <span>Middleware Pipeline</span>
        <span class="text-blue-300">◆</span>
        <span>The Rhapsody Console</span>
        <span class="text-blue-300">◆</span>
        <span>Database Migrations</span>
    </div>
</div>
{% endblock %}

{% block content %}
<div class="-mx-6 -my-6">
    <section id="features" class="py-20 md:py-28 bg-gray-100 dark:bg-gray-900">
        <div class="container mx-auto px-4">
            <div class="text-center max-w-3xl mx-auto mb-16">
                <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-gray-800 dark:text-white">Everything You Need. Nothing You Don't.</h2>
                <p class="mt-4 text-lg text-gray-600 dark:text-gray-400 mb-12">Rhapsody provides a complete toolkit for modern web development, designed for performance and a best-in-class developer experience.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
                <div class="text-center p-6 bg-white dark:bg-gray-700 rounded-lg shadow-lg">
                    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Service Container</h3>
                    <p class="text-gray-600 dark:text-gray-400">A powerful IoC container manages class dependencies, making your application flexible, testable, and easy to scale.</p>
                </div>
                <div class="text-center p-6 bg-white dark:bg-gray-700 rounded-lg shadow-lg">
                    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Expressive Routing</h3>
                    <p class="text-gray-600 dark:text-gray-400">Simple, powerful routing engine that supports dynamic parameters, GET/POST methods, and Middleware.</p>
                </div>
                <div class="text-center p-6 bg-white dark:bg-gray-700 rounded-lg shadow-lg">
                     <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Middleware Pipeline</h3>
                    <p class="text-gray-600 dark:text-gray-400">Protect your application with a middleware pipeline, with built-in support for authentication, and CSRF protection.</p>
                </div>
                <div class="text-center p-6 bg-white dark:bg-gray-700 rounded-lg shadow-lg">
                    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">The Rhapsody Console</h3>
                    <p class="text-gray-600 dark:text-gray-400">Speed up development with a powerful CLI. Generate controllers, models, and middleware. Manage migrations and caches.</p>
                </div>
                <div class="text-center p-6 bg-white dark:bg-gray-700 rounded-lg shadow-lg">
                    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mx-auto mb-4">
                       <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10m16-10v10M8 7h8m-8 5h8m-8 5h8" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Database Migrations</h3>
                    <p class="text-gray-600 dark:text-gray-400">Keep your database schema in version control. Create, modify, and share your database structure reliably.</p>
                </div>
                <div class="text-center p-6 bg-white dark:bg-gray-700 rounded-lg shadow-lg">
                    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Robust Validation</h3>
                    <p class="text-gray-600 dark:text-gray-400">An extensible validation engine with over a dozen rules to ensure your incoming data is always clean and secure.</p>
                </div>
                 <div class="text-center p-6 bg-white dark:bg-gray-700 rounded-lg shadow-lg">
                    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Twig Templating</h3>
                    <p class="text-gray-600 dark:text-gray-400">Secure, fast, and flexible templating with inheritance, caching, and easy data binding.</p>
                </div>
                 <div class="text-center p-6 bg-white dark:bg-gray-700 rounded-lg shadow-lg">
                    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Performance Caching</h3>
                    <p class="text-gray-600 dark:text-gray-400">Built-in support for route caching and a simple application cache for storing the results of expensive operations.</p>
                </div>
                 <div class="text-center p-6 bg-white dark:bg-gray-700 rounded-lg shadow-lg">
                    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mx-auto mb-4">
                       <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Mailer Service</h3>
                    <p class="text-gray-600 dark:text-gray-400">An integrated mailer service built on Symfony Mailer, perfect for sending notifications, and confirmations.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-20 md:py-28 bg-gray-900">
        <div class="container mx-auto px-6">
            <div class="lg:grid lg:grid-cols-2 lg:gap-16 lg:items-center">
                <div class="mb-12 lg:mb-0">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Code That Sparks Joy.</h2>
                    <p class="text-gray-400 text-lg mb-6">
                        Rhapsody's syntax is designed to be intuitive and expressive. Define routes, create controllers, and build your application with a workflow that feels natural and un-obstructive.
                    </p>
                    <ul class="space-y-4 text-gray-300">
                        <li class="flex items-start"><span class="text-blue-400 mr-3 mt-1">&#10003;</span><span><strong>Expressive Routing:</strong> Dynamic parameters and middleware, right where you need them.</span></li>
                        <li class="flex items-start"><span class="text-blue-400 mr-3 mt-1">&#10003;</span><span><strong>Dependency Injection:</strong> Write clean, testable code with our integrated service container.</span></li>
                        <li class="flex items-start"><span class="text-blue-400 mr-3 mt-1">&#10003;</span><span><strong>API-Ready:</strong> Built-in helpers for creating robust JSON APIs for your front-end.</span></li>
                    </ul>
                </div>
                <div class="bg-gray-800 rounded-lg shadow-2xl overflow-hidden">
                    <link rel="stylesheet" href="{{ base_url }}/public/css/prism.css">
                    <script type="text/javascript" src="{{ base_url }}/public/js/prism.js"></script>
                     <pre class="language-php p-6 text-sm"><code class="text-white">
use App\Controllers\UserController;
use Core\Router;

// Simple, expressive, and powerful.
// This is all it takes to define a protected API endpoint.
Router::get('/api/users/{id}', [UserController::class, 'show'])
      ->middleware('auth');
</code></pre>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-gray-100 dark:bg-gray-900 py-20">
        <div class="container mx-auto text-center px-6">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Ready to Start Your Symphony?</h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">Join the growing number of developers choosing simplicity and elegance. Install Rhapsody and begin composing your next web application in minutes.</p>
            <a href="{{ base_url }}/docs/installation" class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 px-10 rounded-lg text-xl transition duration-300 transform hover:scale-105 shadow-lg">
                Let's Build Something Amazing
            </a>
        </div>
    </section>
</div>
{% endblock %}