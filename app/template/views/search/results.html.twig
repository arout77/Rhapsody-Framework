{% extends 'docs.html.twig' %}

{% block title %}Search Results | Rhapsody Framework{% endblock %}

{% block content %}
<section id="searchresults">
    <div class="card mb-4">
        <div class="card-body">
            <h3 class="card-title">Results</h3>
            <div class="card-subtitle text-muted mb-3">
                <p class="card-text">
                    
                    {% if results|length > 0 %}
                    <ul>
                    {% for result in results %}
                        <li>{{ result.content|raw|nl2br }}</li>
                    {% endfor %}
                    </ul>
                    {% else %}
                        <h5 class="text-center">No results found for <span style="background-color: rgb(250, 250, 119);padding: 0 10px;
                            color: #1e2130;">{{ searchTerm }}</span></h5>
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
</section>
{% endblock %}