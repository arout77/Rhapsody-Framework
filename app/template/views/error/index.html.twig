{% extends "errors.html.twig" %}

{% block title %}Error 404 - Page Not Found{% endblock %}

{% block content %}
<div class="container">
    <div class="text">
        <h1>Page Not Found</h1>
        <p>We can't seem to find the page you're looking for. Please check the URL for any typos.</p>
        <div class="input-box">
            <input type="text" placeholder="Search...">
            <button><i class="fa-solid fa-search"></i></button>
        </div>
        <ul class="menu">
            <li><a href="{{base_url }}">Go to Homepage</a></li>
            <li><a href="{{base_url }}documentation">View Documentation</a></li>
        </ul>
    </div>
    <div><img class="image" src="{{base_url }}public/template/errors/img/errorimg.png" alt="{{base_url }} 404 Page Not Found"></div>
</div>
{% endblock %}